
@model IEnumerable<ConsentRequest>
@{
    ViewData["Title"] = "Survey Requests";
}


<br />
<br />
<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Survey Requests List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table indextbl table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.EmailAddress)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Status)</th>
                    <th>@Html.DisplayNameFor(m => m.SubmissionDate)</th>
                    <th>&nbsp;</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmailAddress</td>
                        <td>@item.FullName</td>
                        <td>@item.Status</td>
                        <td>@item.SubmissionDate</td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No requests found</p>
        }
    </div>
</div>